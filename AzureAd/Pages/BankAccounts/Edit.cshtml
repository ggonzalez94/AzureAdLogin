@page
@model AzureAd.Pages.BankAccounts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BankAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BankAccount.Id" />
            <div class="form-group">
                <label asp-for="BankAccount.Number" class="control-label"></label>
                <input asp-for="BankAccount.Number" class="form-control" />
                <span asp-validation-for="BankAccount.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccount.Description" class="control-label"></label>
                <input asp-for="BankAccount.Description" class="form-control" />
                <span asp-validation-for="BankAccount.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccount.Currency" class="control-label"></label>
                <select asp-for="BankAccount.Currency" asp-items="Html.GetEnumSelectList<Currency>()" class="form-control"></select>
                <span asp-validation-for="BankAccount.Currency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankAccount.Customer" class="control-label"></label>
                <select asp-for="BankAccount.CustomerId" class="form-control"
                        asp-items="@Model.CustomerNameList">
                    <option value="">-- Select Customer --</option>
                </select>
                <span asp-validation-for="BankAccount.CustomerId" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
